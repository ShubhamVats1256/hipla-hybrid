<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_verify_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Please enter the One-Time password to verify account !"
                android:textAlignment="center"
                android:textColor="#2958A6"
                android:textSize="24sp">
            </TextView>


            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>
        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            style="@style/OtpWidget.OtpView"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_verify_otp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:inputType="phone"
            android:textColor="@android:color/black"
            app:OtpHideLineWhenFilled="false"
            app:OtpItemCount="6"
            app:OtpItemSpacing="5dp"
            app:OtpLineColor="@color/azure"
            app:OtpViewType="line" />





        <TextView
            android:id="@+id/tv_next"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_bd_botton_2dp_fill"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="12dp"
            android:text="VERIFY &amp; PROCEED"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/entered_wrong_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Entered a wrong number?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp">

        </TextView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <include layout="@layout/footer" />

    </LinearLayout>


</RelativeLayout>